{
  "name": "js-bottomsheet",
  "version": "1.2.4",
  "description": "A pure Js snappable, scrollable, customisable bottomsheet!",
  "keywords": [
    "bottomsheet",
    "js-bottomsheet",
    "javascript",
    "snappable",
    "modal"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SamrithaS/js-bottomsheet"
  },
  "files": [
    "lib",
    "bottomsheet.css"
  ],
  "main": "./lib/bottomsheet.umd.js",
  "module": "./lib/bottomsheet.es.js",
  "exports": {
    ".": {
      "import": "./lib/bottomsheet.es.js",
      "require": "./lib/bottomsheet.umd.js"
    },
    "./bottomsheet.css": "./bottomsheet.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build-lib": "vite build --config viteConfig.js",
    "preview": "vite preview",
    "host": "vite --host"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^5.0.1",
    "scroll-snap-slider": "SamrithaS/scroll-snap-slider",
    "vite": "^4.0.3"
  },
  "dependencies": {
    "@use-gesture/vanilla": "^10.2.20",
    "animejs": "^3.2.1"
  }
}
