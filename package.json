{
  "name": "js-bottomsheet",
  "version": "1.0.1",
  "description":"A pure Js snappable, scrollable, customisable bottomsheet!",
  "keywords": [
    "bottomsheet",
    "js-bottomsheet",
    "javascript",
    "snappable",
    "modal"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SamrithaS/js-bottomsheet"
  },
  "files":["lib", "bottomsheet.css"],
  "main":"./lib/bottomsheet.umd.js",
  "module":"./lib/bottomsheet.es.js",
  "exports": {
    ".": {
      "import": "./lib/bottomsheet.es.js",
      "require": "./lib/bottomsheet.umd.js"
    },
    "./bottomsheet.css": "./bottomsheet.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build-lib": "rollup -c",
    "preview": "vite preview",
    "host": "vite --host"
  },
  "devDependencies": {
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^23.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.1",
    "@rollup/plugin-terser": "^0.1.0",
    "rollup": "^3.5.0",
    "rollup-plugin-filesize": "^9.1.2",
    "scroll-snap-slider": "SamrithaS/scroll-snap-slider",
    "vite": "^3.2.4"
  },
  "dependencies": {
    "@use-gesture/vanilla": "^10.2.20",
    "animejs": "^3.2.1"
  }
}
